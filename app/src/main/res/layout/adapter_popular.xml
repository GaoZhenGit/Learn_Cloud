<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defalut"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginLeft="@dimen/margin_left"
        android:background="@drawable/btn_selector_drawlayout"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right">
            <TextView
                android:id="@+id/popularization_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                tools:text="这个是科普的标题"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/black"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/popularization_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popularization_title"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                tools:text="这个是科普的简介这个是科普的简介这个是科普的简介这个是科普的简介这个是科普的简介"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/popularization_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="10dp"
            android:src="@drawable/default_avatar"
            android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>