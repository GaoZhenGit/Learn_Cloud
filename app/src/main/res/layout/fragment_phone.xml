<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibm.gz.learn_cloud.fragment.LoginFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/login_phone_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:layout_marginTop="@dimen/button_height"/>

        <EditText
            android:id="@+id/login_phone_code_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="短信动态码"
            android:layout_marginTop="@dimen/button_height"/>

        <EditText
            android:id="@+id/login_phone_psw_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="设置密码"
            android:layout_marginTop="@dimen/button_height"/>
        <TextView
            android:id="@+id/regist_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/btn_selector_round_title_bar_color_disable"
            android:layout_marginTop="@dimen/button_height"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:text="立即注册"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"/>
    </LinearLayout>

</FrameLayout>
